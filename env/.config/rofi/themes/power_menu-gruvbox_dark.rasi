* {
  // background : #282828;
  background : #282828b3;
  foreground : #ebdbb2;

  black :   #282828;
  // red :     #cc241d;
  red :     #cc241d9d;
  // green :   #98971a;
  green :   #98971a4d;
  yellow :  #d79921;
  blue :    #458588;
  magenta : #b16286;
  cyan :    #689d6a;
  white :   #a89984;

  // black-bright : #928374;
  black-bright : #928374b3;
  white-bright : #ebdbb2;

  /* Default background color */
  background-color: transparent;
  font: "RobotoMono Nerd Font 12";
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}


window {
  border-color: @background;
  border-radius: 10px;
  background-color: @background;
  text-color: @foreground;
  width: 300px;
}

mainbox {
  padding: 8px;
  children: [inputbar, listview];
}

inputbar {
  padding: 8px;
  border: 0px;
  border-radius: 8px;
  children: [prompt, entry];
}

entry {
  placeholder: "Search";
}

listview {
  padding: 0.5em;
  border-color: @background;
  border-radius: 8px;
  background-color: @background;
  columns: 1;
  lines: 6;
  scrollbar: false;
}

element {
    cursor: pointer;
    border:  0px;
    border-radius: 8px;
    padding: 3px;
    border-color: @background;
    background-color: @background;
    vertical-align: 0.5;
    children: [ element-text ];
}

element-text {
    text-color:       @black;
    font: "RobotoMono Nerd Font 13";
    margin:   0px 0px;
    vertical-align: 0.5;
}

element.normal.normal {
    background-color: @black-bright;
    text-color:       @black;
}
element.normal.urgent {
    background-color: @red;
    text-color:       @black;
}
element.normal.active {
    background-color: @green;
    text-color:       @black;
}

element.selected.normal {
    background-color: @green;
    border-color: @green;
    text-color: @black;
}
element.selected.urgent {
    background-color: @red;
    border-color: @red;
    text-color: @black;
}
element.selected.active {
    background-color: @green;
    border-color: @green;
    text-color: @black;
}

element.alternate.normal {
    background-color: @black-bright;
    text-color: @black;
}
element.alternate.urgent {
    background-color: @black-bright;
    text-color: @green;
}
element.alternate.active {
    background-color: @black-bright;
    text-color: @green;
}

element-text.selected.normal {
    border-color: @green;
    text-color: @black;
}
element-text.selected.urgent {
    border-color: @red;
    text-color: @black;
}
element-text.selected.active {
    border-color: @green;
    text-color: @black;
}
